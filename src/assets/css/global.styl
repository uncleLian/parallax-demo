* {
    box-sizing: border-box;
}
html, body {
    min-width: 1024px;
    width: 100%;
    height: 100%;
    min-height: 100%;
    background: #fff;
}
body {
    font-family: Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, SimSun, sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #333;
    overflow-x: hidden;
    overflow-y: auto;
}
